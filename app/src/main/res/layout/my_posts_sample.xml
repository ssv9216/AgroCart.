<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    android:padding="5dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="5dp"
    android:layout_marginEnd="10dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_marginStart="10dp"
    android:id="@+id/parent_layout_my_posts">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:background="@color/gunmetal"
        >

        <TextView
            android:id="@+id/tvCropNameMyPosts"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center"
            android:text="Crop_Name"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/mentCream"
            android:textSize="25dp"
             />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:text="Weight  :"
                android:textColor="@color/mentCream"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvCropWeightMyPosts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:text="Crop_Weight"
                android:textColor="@color/mentCream"
                android:textSize="20sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kg"
                android:layout_gravity="end"
                android:textColor="@color/gunmetal"
                android:textSize="20sp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:text="Price  :"
                android:textColor="@color/mentCream"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvCropPriceMyPosts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:text="Crop_price"
                android:textColor="@color/mentCream"
                android:textSize="20sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rs"
                android:layout_gravity="end"
                android:textColor="@color/gunmetal"
                android:textSize="20sp"
                />

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>